APP_NAME=Fortlify
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Phoenix
APP_URL=http://localhost:5000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Use SQLite for local development:
DB_CONNECTION=sqlite

# For production MySQL:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=fortlify
# DB_USERNAME=root
# DB_PASSWORD=

# For production PostgreSQL:
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=fortlify
# DB_USERNAME=postgres
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@fortlify.app"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Stripe Configuration (Laravel Cashier)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
CASHIER_CURRENCY=usd
CASHIER_CURRENCY_LOCALE=en

# Subscription Plans
# Free plan: 1 audit per month
# Starter plan: $29/month, 10 audits per month
# Growth plan: $79/month, unlimited audits
STRIPE_PRICE_STARTER=
STRIPE_PRICE_GROWTH=

# MailerLite Configuration
MAILERLITE_API_KEY=

# Google PageSpeed Insights API
PAGESPEED_API_KEY=

# Optional: Google Search Console (OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Optional: SERP API (SerpAPI or DataForSEO)
SERP_API_PROVIDER=serpapi
# For SerpAPI:
SERPAPI_KEY=
# For DataForSEO:
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=

# Feature Flags
FEATURE_GOOGLE_SEARCH_CONSOLE=false
FEATURE_SERP_API=false
FEATURE_ADMIN_DASHBOARD=true

# Audit Engine Configuration
AUDIT_MAX_PAGES_FREE=1
AUDIT_MAX_PAGES_STARTER=10
AUDIT_MAX_PAGES_GROWTH=100
AUDIT_TIMEOUT_SECONDS=60
AUDIT_USER_AGENT="FortlifyBot/1.0"
