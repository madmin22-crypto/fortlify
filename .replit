modules = ["php-8.2", "nodejs-20", "postgresql-16", "python-3.11"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Queue Worker"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Queue Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan queue:work --tries=3 --timeout=300"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
